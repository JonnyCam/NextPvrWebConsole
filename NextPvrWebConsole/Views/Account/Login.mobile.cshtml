@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NextPVR Web Console</title>
    
    @Styles.Render("~/Content/mobile/css")      
    @Scripts.Render("~/bundles/mobile/js") 

    <style>
        .ui-header 
        {
            height:40px;
            position:fixed;
            top:0;
            left:0;
            right:0;            
        }
        .ui-content
        {
            padding-top:50px;
            text-align:center;
        }
        #forgotpassword
        {
            margin-top:20px;
            display:block;
        }
        input#rememberme 
        {
            visibility:hidden;
        }
    </style>
</head>
<body>
    <div data-role="page" data-theme="a"> 
        <div data-role="header"> 
	        <h1>NextPVR Web Console</h1> 
        </div> 

        <div data-role="content">
            <form action="account/mobilelogin" method="post" data-ajax="false">

                <div data-role="fieldcontain" class="ui-hide-label">
	                <label for="username">Username:</label>
	                <input type="text" name="username" id="username" value="" placeholder="Username"/>
                </div>

                <div data-role="fieldcontain" class="ui-hide-label">
	                <label for="username">Password:</label>
	                <input type="password" name="password" id="password" value="" placeholder="Password"/>
                </div>

                <label><input type="checkbox" id="rememberme" />Remember Me</label>

                <input type="submit" value="Login" />

                <a href="ForgotPassword" id="forgotpassword">Forgot Password?</a>
            </form>
        </div>
    </div>
</body>
</html>
