@{
    var model = (NextPvrWebConsole.Models.ConfigurationModels.SmtpConfiguration)ViewBag.SmtpModel;
}
<table>
    <tr>
        <td class="label" data-lang="Server"></td>
        <td class="value">
            @Html.EditorFor(m => model.Server)
            @Html.ValidationMessageFor(m => model.Server)
            <span class="description" data-lang="Smtp-Server-Description" />
        </td>
    </tr>
    <tr>
        <td class="label" data-lang="Port"></td>
        <td class="value">
            @Html.EditorFor(m => model.Port)
            @Html.ValidationMessageFor(m => model.Port)
