@{
    Layout = null;

    string hostname = Environment.MachineName; // TODO get this from a setting
    
    string url = "http://" + hostname + ":8866/";
    if(ViewBag.IsRecording)
    {
        url += "live?recording=" + ViewBag.Oid;
    }
    else
    {
        url += "live?channeloid=" + ViewBag.ChannelOid;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.ChannelName Live</title>
</head>
<body>
    <embed type="application/x-vlc-plugin"
         name="video1"
         autoplay="yes" loop="yes" width="800" height="450"
         target="@url" />
</body>
</html>
